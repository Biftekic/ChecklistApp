#\!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Check if commit message follows conventional commits pattern
commit_regex='^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\([a-zA-Z0-9_-]+\))?: .{1,100}$'
commit_msg=$(cat "$1")

if \! echo "$commit_msg" | grep -qE "$commit_regex"; then
  echo "‚ùå Invalid commit message format\!"
  echo ""
  echo "Commit message must follow Conventional Commits format:"
  echo "  <type>(<scope>): <description>"
  echo ""
  echo "Examples:"
  echo "  feat: add new authentication feature"
  echo "  fix(auth): resolve login timeout issue"
  echo "  docs: update README with installation steps"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert"
  exit 1
fi
